  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@event-reward-platform/(.*)$": "<rootDir>/../../../libs/$1/src"
  },
  "maxWorkers": 1
}